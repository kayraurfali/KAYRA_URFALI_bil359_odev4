<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_pink"
    android:padding="16dp"
    tools:context=".ActivitySearchMedicine">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="325dp"
        android:layout_height="60dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="188dp"
        android:layout_marginEnd="48dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/searchInput"
            android:layout_width="247dp"
            android:layout_height="55dp"
            android:background="@drawable/border"
            android:ems="10"
            android:gravity="center_vertical"
            android:hint="@string/search_medicine_hint"
            android:inputType="textPersonName"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textColor="@color/purple_700"
            android:textColorHint="@color/purple_200" />

        <Button
            android:id="@+id/searchButton"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_marginStart="24dp"
            android:layout_weight="1"
            android:background="@drawable/searching"
            android:hint="@string/search_button_hint"
            android:onClick="onSearchButtonClick"
            android:textColorHint="#00000000" />
    </LinearLayout>

    <TextView
        android:id="@+id/searchOutputMedicineLocation"
        android:layout_width="311dp"
        android:layout_height="235dp"
        android:background="@drawable/border"
        android:padding="20dp"
        android:textColor="@color/purple_700"
        android:textColorHint="@color/purple_200"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:layout_constraintVertical_bias="0.253" />

</androidx.constraintlayout.widget.ConstraintLayout>